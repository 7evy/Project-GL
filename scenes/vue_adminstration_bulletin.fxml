                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <ComboBox fx:id="yearGroupCombo" onAction="#selectionYearGroup" prefHeight="30.0" prefWidth="233.0" promptText="Promotion">
